{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "This is microservice that manages and sends notifications to users for different events via email",
  "main": "app.js",
  "scripts": {
    "start": "pm2 start ./build/src/app.js -i 5 --attach --watch | pino-pretty -c",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "dev": "nodemon -r tsconfig-paths/register ./src/app.ts | pino-pretty -c",
    "lint:check": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier:check": "prettier --check 'src/**/*.{ts,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,json}'",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/cpyAssets.ts",
    "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false"
  },
  "keywords": [],
  "author": "Mohamed Ramadan",
  "license": "ISC",
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/amqplib": "^0.10.5",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.14",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.12.2",
    "@mohamedramadan14/freelance-shared": "^0.0.14",
    "amqplib": "^0.10.3",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "email-templates": "^11.1.1",
    "express": "^4.18.3",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^6.9.11",
    "shelljs": "^0.8.5",
    "typescript": "^5.3.3",
    "typescript-transform-paths": "^3.4.7",
    "winston": "^3.11.0"
  }
}
